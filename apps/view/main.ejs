<%- include("./header.ejs")%> 

<div class="container-fluid">
  <div class="row">
    
    <div class="col-md-6">

<div id="carouselExampleIndicators" style="top:60px" class="carousel carousel-dark slide" data-bs-ride="carousel"> <!-- slide -> fade--> 

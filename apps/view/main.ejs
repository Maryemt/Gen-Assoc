  <div class="carousel-inner">
    <div class="carousel-item  active" data-tooltip="Add users to your feed" data-inverted="">  <!--style="background-color:gray"-->

  
          <h3 class="ui horizontal divider header">Job Title</h3>
       <div class="container col-8" >   
        <div class="d-block w-100" >  
              <form action="" class="jobTitle_div" id="form1" >
            <input type="text" class="jobTitle_field" placeholder="Specify Your Job Title" name="job_title" id="job_title" required />
            <label for="job_title" class="jobTitle_label">Job Title</label>
            <input type="submit"  id="start_job" class="myBtn myBtn-mtd-color" value="Start">

        </form> 
    <div  class="container  col-10"> 
 <h5>Start Your Job Title</h5>
        <p>Some representative placeholder content for the third slide.</p>
</div> 

        </div>
 
       </div>
 
    </div>
    
    <div  class="container col-8">  
    <div class="carousel-item "> 

          <h3 class="ui horizontal divider header">Upload Sheets</h3>
 <% if  ( socket )  {%> 
            <form method="post" action="" enctype="multipart/form-data" name="file_uploader" id="form_upload" class="ui form" style="padding:20px; padding-bottom: 0;">
              <div class="ui fluid action input">
                <input name="fupload" type="file" accept=".ped,.map,.phen" multiple style="padding: 20px;"> 
                <div class="ui button">
                  <button class="ui vertical animated button" type="submit" id ="files_uploader">
                    <div class="hidden content">Upload</div>
                    <div class="visible content">
                      <i class="upload icon"></i>
                    </div>
                  </button>
                </div>
              </div>
            </form>
          <%}%>     

    </div>
    </div>


    <div class="container col-8">  
    <div class="carousel-item ">
    

          <h3 class="ui horizontal divider header">Summary  Statistics </h3>
<form name="form" style="padding:20px;" class="ui form"> 
            <div class="ui toggle checkbox">
                <input type="checkbox" id="sync" name="sync">
                <label for="sync">Sync</label>
            </div>
            <div class="field">
              <label for="ped">Pedigree File</label>
              <select required id="ped" name="ped" class="ui fluid dropdown">
                  <option   value = ""  disabled selected>Select a ped file</option>
              </select>
            </div>
            <div class="field">
              <label for="map">Map file</label>
              <select required id="map" name="map" class="ui fluid dropdown">
                  <option value="" disabled selected>Select a map file</option>
              </select>
            </div>
            <div class="field">
              <label for="phen">Phenotype file</label>
              <select required id="phen" name="phen" class ="ui search dropdown">
                <option value = "" disabled selected > Select a phen file</option>
              </select>
            </div>
            <button type="submit" id ="run_summary" class="ui button">Launch Summary Statistics &nbsp;<i class="fas fa-chart-bar"></i></button>
          </form> 
    </div>

</div>

        
     
    <div  class = "container col-8"> 
    <div class="carousel-item">  

          <h3 class="ui horizontal divider header">Genotype Inference</h3>
<form action="" class="ui form">
            <div class="inline fields">
              <div class="field" style="align-content:center;">
                <!--h4>Retrieve missing genotypes : &nbsp;
                </h4-->
              </div>
              <div class="ui large buttons">
                <button class="ui blue button"  id="gi-yes">Genotype Inference</button>
                <div class="or"></div>
                <button class="ui button negative" id ="gi-no">Pass</button>
              </div>
            </div>
          </form>

    </div> 
  </div> 





<div  class = "container col-8"> 
    <div class="carousel-item">  
 
      <h3 class="ui horizontal divider header">Run Type</h3>
      <form action="" class="ui form"> 
            <div class="inline fields">
              <div class="field" style="align-content:center;">
                <!--h4>Retrieve missing genotypes : &nbsp;
                </h4-->
              </div>
              <div class="ui large buttons">
                <button class="ui blue button"  id="single_marker">Single Marker</button>
                <div class="or"></div>
                <button class="ui button negative" id ="multi_marker">Multi Marker</button>
              </div>
            </div>
          </form>

    </div> 
  </div>

    <div  class= "container col-8"> 
        <div class="carousel-item" >  
          <!-- Choosing an Empirical run or a Theorical run-->
          <h3 class="ui horizontal divider header">ANALYSIS</h3>
          <div class="ui placeholder segment" style="background-color: whitesmoke; border:none !important;">
            <div class="ui two column stackable center  aligned  grid" >
              <div class="column">
                <h4 style="margin-top:-11px; margin-left: 67px;color: orange;">EMPIRICAL RUN</h4>
                <div class="ui form">
                  <div class="field">
                    <label for="nbsim"><span>Number of simulations</span></label>
                    <div class="ui left icon input">
                      <input id="nbsim" placeholder="10">
                      <i class="redo icon"></i>
                    </div>
                  </div>
                  <div class="field">
                    <label for="nbcores">Number of Cores</label>
                    <select id="nbcores" name="nbcores" class="ui search dropdown">
                      <option value = "" disabled selected > Cpus core available</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="field">
                <div class="ui icon header">   
                  <h4 style="color: #59698D;">THEORICAL RUN</h4>
                  <i class="leaf icon"></i>
                  <div class="ui medium  button active  t-run"  style="background-color: #59698D;color: white;">GO !</div> 
                </div>
              </div>
            </div> 

            <div class="ui vertical divider">
              Or
            </div>
    </div>


        </div> 

    </div>  







    <div  class="container col-8"> 
    <div  class="carousel-item"> 
    
        <h3 class="ui horizontal divider header">Run Analysis</h3>  
 
<form name="form" style="padding:20px;" class="ui form"> 
          <div class="field">
            <select id="phenotype" name="phenotype" class="ui search dropdown">
              <option value="" disabled selected>Number of phenotype</option>
            </select>
          </div>
